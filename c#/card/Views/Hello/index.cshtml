<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Hello!</title>
    </head>
    <body>
        <h1>Hello ASP.NET Mvc!</h1>
        @{
            var StringList = new List<string>{
                                    "one",
                                    "two",
                                    "three",
                                    "four"
                                };
            
            foreach(var word in StringList)
            {
                // We can render HTML from within C# code!
                <div>
                    <p>@word</p>
                    @if(word.Length < 4)
                    {
                        <p>@word is a short word</p>
                    }
                </div>
            }
        }
    </body>
</html>
